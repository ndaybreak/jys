.help-content {
  width: 1200px;
  margin: 15px auto 20px auto;
  .category {
    display: inline-block;
    vertical-align: top;
    width: 100%;
    padding-right: 0;
    .title {
      font-size: 22px;
      line-height: 70px;
    }
    .item {
      font-size: 16px;
      line-height: 28px;
      color: #000;
      padding: 8px 0;
      word-wrap: break-word;
      .link {
        transition: none;
        color: #000;
        display: inline-block;
        &:hover {
          color: #0DA9FF;
          text-decoration: underline;
        }
      }
    }
    .check-more {
      margin-top: 20px;
      display: inline-block;
      text-decoration: underline;
    }
  }
  .left {
    float: left;
    width: 260px;
    padding-right: 60px;
  }
  .right-content {
    overflow: hidden;
    font-size: 14px;
    line-height: 2;
  }
}